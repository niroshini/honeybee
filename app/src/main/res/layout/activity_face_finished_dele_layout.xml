<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/black"
    android:gravity="fill"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
         >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblMandelResultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnFaceExitAll"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnFaceExitAll"
                android:text="Received results. All work done!"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#F6F1F1" />

            <Button
                android:id="@+id/btnFaceExitAll"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="Back to Main"
                android:textColor="#F6F5F5" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/deledoneimageview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/endResult"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:text="result"
            android:textColor="#FFC107" />

        <Button
            android:id="@+id/btnNextImage"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:text="Next >>"
            android:textColor="#F6F6F6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
         >

        <TextView
            android:id="@+id/labeldeleDonefaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of faces = "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtOnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

</LinearLayout>