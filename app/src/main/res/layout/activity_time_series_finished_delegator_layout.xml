<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="fill"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="605dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblTimeSeriesResultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnTimeSeriesExitAll"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnTimeSeriesExitAll"
                android:text="Received results. All work done!"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#F6F1F1" />

            <Button
                android:id="@+id/btnTimeSeriesExitAll"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="Back to Main"
                android:textColor="#F6F5F5" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timeSeriesResultText"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:text="result"
            android:textColor="#FFC107" />

        <Button
            android:id="@+id/btnNextFile"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:text="Next >>"
            android:textColor="#F6F6F6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labeldeleDoneFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of faces = "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtOnTimeSeriesConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
</LinearLayout>